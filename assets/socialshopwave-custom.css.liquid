@media screen and (min-width: 1024px) {
.ssw-instagram-feed-wrap {
	padding-left: 100px;
  	padding-right: 100px;
  	margin-left: auto;
  	margin-right: auto;
  	max-width: var(--max-width);
}
}

.gw-container {
	margin-bottom: 20px;
}

.gw-container .social-heading {
	display: block;
  width: 100%;
	text-align: center;
  padding: 0 var(--space-outer);
}

.gw-container .social-links {
	display: block;
  	width: 100%;
	text-align: center;
    padding: 0 var(--space-outer);
	font-size: 20px;
      padding-top: 4px;
}

.gw-container .social-links a {
	text-decoration: underline;
    text-decoration-thickness: 1.5px;
    text-decoration-color: #606060;
}

@media (min-width: 1024px) {
  	.gw-container .social-heading {
    	/font-size: 36px;
    }
	.gw-container .social-links {
    	font-size: 24px;
    }
}

.ssw-carousel-prev-icon,
.ssw-carousel-next-icon {
	background-color: #ffffff94;
}

.ssw-icon-left-open-big:before,
.ssw-icon-right-open-big:before {
  	color: black;
    font-size: 16px;
  	width: 5px;
}
.ssw-icon-left-open-big:before {
	width: 8px;
}

.ssw-instagram-detail-product-link {
  display: block;
  text-align: center;
}

.ssw-instagram-detail-product-add-to-cart {
  font-family: 'Frutiger Serif';
}

@media (min-width: 600px) {
  .ssw-instagram-detail-product {
    position: relative;
    text-align: center;
  }
  
  .ssw-instagram-detail-product-add-to-cart {
      position: absolute;
      right: 0;
      top: 0;
  }
}